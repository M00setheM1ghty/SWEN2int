<UserControl x:Class="intermediateSWEN2.Views.TourViewDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:intermediateSWEN2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header="General">
                <!-- General tab content goes here -->
                <ListView Grid.Row="1" ItemsSource="{Binding SelectedTourCollection}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Tour Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="200"/>
                            <GridViewColumn Header="From" DisplayMemberBinding="{Binding From}" Width="100"/>
                            <GridViewColumn Header="To" DisplayMemberBinding="{Binding To}" Width="100"/>
                            <GridViewColumn Header="Transport Type" DisplayMemberBinding="{Binding TransportType}" Width="100"/>
                            <GridViewColumn Header="Distance" DisplayMemberBinding="{Binding Distance}" Width="80"/>
                            <GridViewColumn Header="Estimated Time" DisplayMemberBinding="{Binding EstimatedTime}" Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Route">
                <!-- Route tab content goes here -->
                
            </TabItem>
            <TabItem Header="Misc">
                <!-- Misc tab content goes here -->
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
